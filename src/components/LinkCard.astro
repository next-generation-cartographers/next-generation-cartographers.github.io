---
const { url, title, text } = Astro.props;
---

<div class="link-card">
  <a href={url}>
    <h2>
      {title}
      <span style="font-family: var(--font-family-body)">&rarr;</span>
    </h2>
    <p>{text}</p>
  </a>
</div>

<style>
  .link-card {
    margin-bottom: 1em;
    max-width: 400px;
    display: flex;
    padding: 2px;
    background-color: #fff;
    background-image: none;
    background-size: 400%;
    border-radius: calc(var(--border-radius-sm) * 1.2);
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow:
      0 4px 6px -1px rgba(var(--accent), 0.1),
      0 2px 4px -2px rgba(var(--accent), 0.1);
    & > a {
      width: 100%;
      text-decoration: none;
      line-height: 1.4;
      padding: 1rem 1.3rem;
      border-radius: var(--border-radius-sm);
      color: #111;
      background-color: #fff;
      opacity: 0.8;
    }
    & h2 {
      margin: 0;
      font-size: 1.25rem;
      transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    }
    &:is(:hover, :focus-within) {
      background-position: 0;
      background-image: var(--accent-gradient-white);
    }
    &:is(:hover, :focus-within) h2 {
      color: rgb(var(--accent));
    }
  }
</style>
