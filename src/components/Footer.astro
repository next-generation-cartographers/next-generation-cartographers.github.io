---
import { navigationLinks } from "../data/navigation.ts";

const currentPath = Astro.url.pathname;
const secondLevelSlug = currentPath.split("/").at(2);
---

<footer>
  <div>
    <h2>Next Generation<br /> Cartographers</h2>
    <p>
      Dedicated to advocacy, support and mentorship for early career
      cartographers.
    </p>
  </div>
  <nav>
    <ul>
      {
        navigationLinks.slice(0, -1).map(({ href, label, children }) => (
          <li>
            {children ? (
              <>
                <strong>{label}</strong>
                <ul>
                  {children.map(({ href, label }) => (
                    <li>
                      <a
                        class:list={{
                          active:
                            (secondLevelSlug &&
                              href.includes(secondLevelSlug)) ||
                            currentPath === href,
                        }}
                        href={href}
                      >
                        {label}
                      </a>
                    </li>
                  ))}
                </ul>
              </>
            ) : (
              <a href={href}>{label}</a>
            )}
          </li>
        ))
      }
      <li>
        <ul>
          {
            [
              { href: "/#contact", label: "Contact" },
              { href: "/legal-notice", label: "Legal notice" },
              { href: "/privacy-notice", label: "Privacy notice" },
            ].map(({ href, label }) => (
              <li>
                <a href={href} class:list={{ active: currentPath === href }}>
                  {label}
                </a>
              </li>
            ))
          }
        </ul>
      </li>
    </ul>
  </nav>
</footer>

<style>
  footer {
    padding: 0 1.5em;
    margin: var(--spacing-lg) auto;
    display: flex;
    flex-direction: column;
    gap: var(--spacing);
    max-width: var(--max-width);
  }
  h2 {
    margin-top: 0;
    font-size: 1rem;
    font-weight: 800;
    line-height: 1.2em;
  }
  nav {
    container-type: inline-size;
    ul {
      list-style-type: none;
      margin-top: 0;
      padding-left: 0;
    }
    > ul {
      display: grid;
      gap: var(--spacing);
      column-gap: var(--spacing-lg);
      grid-template-columns: repeat(2, 1fr);
      @container (min-width: 550px) {
        grid-template-columns: repeat(3, 1fr);
      }
      strong {
        margin-bottom: 1em;
        display: inline-block;
        font-weight: 800;
        font-stretch: 75%;
        font-size: 0.8em;
        text-transform: uppercase;
        letter-spacing: 0.1em;
      }
    }
    a {
      text-decoration: none;
      color: inherit;
      &.active::before {
        display: inline-block;
        content: "";
        width: 0.35em;
        height: 0.35em;
        margin-right: 0.1em;
        border-radius: 100%;
        background: var(--primary-gradient);
        pointer-events: none;
        vertical-align: 0.15em;
      }
    }
  }
</style>
